@page
@model RegisterModel

@{
    ViewData["Title"] = "Registration";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/dark-hive/jquery-ui.css" />
</head>

<div class="container">
    <h1 class="text-center display-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input id="email" asp-for="Input.Email" class="form-control" autocomplete="username" required placeholder=" " />
                        <label for="email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input id="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" required placeholder=" " />
                        <label for="password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input id="confirmPassword" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" required placeholder=" " />
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="btn-black">Register</button>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
