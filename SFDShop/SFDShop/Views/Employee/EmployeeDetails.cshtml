@using SFDShop.Application.ViewModel.Employee
@model SFDShop.Application.ViewModel.Employee.EmployeeDetailsVm

@{
    ViewData["Title"] = "EmployeeDetails";
}

<h1>Employee Details</h1>

<p>
    <a asp-action="AddEmployee" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Position)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.FullName</td>
            <td>@Model.Position</td>
            <td>@Model.PhoneNumber</td>  
            <td>@Model.EmailAddress</td>
            <td>
                <a asp-action="EditEmployee" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    </tbody>
</table>
