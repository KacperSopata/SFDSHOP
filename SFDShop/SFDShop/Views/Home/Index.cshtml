<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SFD Shop</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/home.css"> <!-- Link do pliku CSS -->
    <link rel="stylesheet" href="/css/site.css"> <!-- Link do pliku CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Link do Font Awesome bez atrybutu integrity -->
</head>
<body>

    <div class="banner text-white">
        <h1 class="display-1 text-shadow">Welcome to SFD</h1>
    </div>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Index", "Customer")" class="card text-center border-0 shadow-lg p-4 h-100">
                    <i class="fas fa-user fa-3x mb-3"></i>
                    <h3>Customers</h3>
                    <p>Manage your customers</p>
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Index", "Item")" class="card text-center border-0 shadow-lg p-4 h-100">
                    <i class="fas fa-box fa-3x mb-3"></i>
                    <h3>Products</h3>
                    <p>Manage your products</p>
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Index", "Order")" class="card text-center border-0 shadow-lg p-4 h-100">
                    <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                    <h3>Orders</h3>
                    <p>Manage orders</p>
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Index", "Employee")" class="card text-center border-0 shadow-lg p-4 h-100">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h3>Employees</h3>
                    <p>Manage your employees</p>
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Index", "EmployeeTask")" class="card text-center border-0 shadow-lg p-4 h-100">
                    <i class="fas fa-tasks fa-3x mb-3"></i>
                    <h3>Employee Tasks</h3>
                    <p>Assign tasks to employees</p>
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Index", "WorkSchedule")" class="card text-center border-0 shadow-lg p-4 h-100">
                    <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                    <h3>Work Schedule</h3>
                    <p>Manage work schedules</p>
                </a>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "AdminPanel")" class="card text-center border-0 shadow-lg p-5 h-100">
                        <i class="fas fa-user-shield fa-3x mb-3"></i>
                        <h3>Admin Panel</h3>
                        <p>Administrative panel for user management</p>
                    </a>
                </div>
            </div>
        </div>
    }
</body>
</html>
