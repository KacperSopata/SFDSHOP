@model SFDShop.Application.ViewModel.EmployeeTask.NewEmployeeTaskVm

<h2>Edit Task for Employee</h2>

<form asp-action="EditTask" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskDate"></label>
        <input asp-for="TaskDate" class="form-control" type="date" />
        <span asp-validation-for="TaskDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsCompleted"></label>
        <input asp-for="IsCompleted" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId">Employee</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to Task List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
